<%- include('../layouts/admin/head', { title: '首页' }) %>
<table class="layui-table">
    <colgroup>
      <col width="150">
      <col width="200">
    </colgroup>
    <thead>
      <tr>
        <th>标题</th>
        <th>操作</th>
      </tr> 
    </thead>
    <tbody>
      <% list.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><button data-id="<%= item._id %>" class="layui-btn layui-btn-danger btn-delete"
                >删除</button></td>
          </tr>
      <% }) %>
    </tbody>
  </table>

  <script src="/static/jquery/jquery.js"></script>
  <script>
     $('html').on('click', '.btn-delete', function () {
         $.ajax({
             type: 'delete',
             url: '/api/categories/'+$(this).data('id'),
             success({code}){
                 if(code) location.reload()
             }
         })
     })
  </script>
<%- include('../layouts/admin/foot') %>
