<%- include('../layouts/admin/head', { title: '首页' }) %>
  <form class="layui-form" action="">
    <div class="layui-form-item">
      <label class="layui-form-label">标题</label>
      <div class="layui-input-block">
        <input id="title" type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off"
          class="layui-input">
      </div>
    </div>
    <div class="layui-form-item">
      <label class="layui-form-label">分类</label>
      <div class="layui-input-block">
        <select id="categories" name="city" lay-verify="required">
          <option value=""></option>
          <% categories.forEach(item=> { %>
            <option value="<%= item._id %>">
              <%= item.name %>
            </option>
            <% }) %>
        </select>
      </div>
    </div>
    <div class="layui-form-item layui-form-text">
      <label class="layui-form-label">文本域</label>
      <div id="content" class="layui-input-block"></div>
    </div>
    <div class="layui-form-item">
      <div class="layui-input-block">
        <button id="btn" class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
      </div>
    </div>
  </form>
  <style>
    .layui-unselect {
      z-index: 10002;
    }
  </style>
  <script src="/static/editor/wangEditor.js"></script>
  <script src="/static/jquery/jquery.js"></script>
  <script>
    const editor = new wangEditor('#content')
    editor.create();
    $('#btn').click(function (e) {
      e.preventDefault();
      let form = new FormData()
      $.ajax({
        url: '/api/article',
        type: 'post',
        data: {
          'title': $('#title').val(),
          'categories': $('#categories').val(),
          'content': editor.txt.html()
        },
        success(data) {
          if (data.code) {
            location.reload();
          }
        }
      })
    })
  </script>
  <%- include('../layouts/admin/foot') %>